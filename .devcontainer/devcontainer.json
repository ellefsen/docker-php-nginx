{
    "build": {
        "dockerfile": "../Dockerfile"
    },
  
    // Install ESLint and Peacock extensions
    "extensions": [
      "dzannotti.vscode-babel-coloring",
      "aeschli.vscode-css-formatter",
      "mikestead.dotenv",
      "editorconfig.editorconfig",
      "dbaeumer.vscode-eslint",
      "sveggiani.vscode-field-lights",
      "wix.vscode-import-cost",
      "dbaeumer.jshint",
      "christian-kohler.npm-intellisense",
      "junstyle.php-cs-fixer",
      "bmewburn.vscode-intelephense-client",
      "felixfbecker.php-intellisense",
      "mehedidracula.php-namespace-resolver",
      "ikappas.phpcs",
      "mrmlnc.vscode-scss",
      "bradlc.vscode-tailwindcss",
      "octref.vetur",
      "jcbuisson.vue",
      "hollowtree.vue-snippets",
    ],
  
    // Set remote color for Peacock
    "settings": {
        "editor.tabSize": 4,
        "workbench.colorTheme": "Field Lights",
        "editor.lineHeight": 24,
        "workbench.statusBar.visible": false,
        "explorer.openEditors.visible": 0,
        "php.suggest.basic": false,
        "window.zoomLevel": 0,
        "phpcs.executablePath": "/Users/kimellefsen/.composer/vendor/bin/phpcs",
        "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
        "php-cs-fixer.onsave": true,
        "php-cs-fixer.config": "/Users/kimellefsen/.vscode/.php_cs",
        "eslint.validate": [
            { "language": "vue", "autoFix": true },
            { "language": "html", "autoFix": true },
            { "language": "javascript", "autoFix": true },
        ],
        "emmet.includeLanguages": {
            "javascript": "javascriptreact",
            "vue-html": "html"
        },
        "javascript.format.enable": false,
        "jshint.options": {
            "esversion": 6,
            "asi": true
        },
        "importCost.typescriptExtensions": [
            "\\.tsx?$",
            "\\.vue$"
        ],
        "importCost.javascriptExtensions": [
            "\\.jsx?$",
            "\\.vue$"
        ],
        "php-cs-fixer.lastDownload": 1575896419121,
        "terminal.integrated.shell.osx": "zsh",
        "eslint.autoFixOnSave": true,
        "workbench.fontAliasing": "antialiased",
        "[php]": {
            "editor.defaultFormatter": "junstyle.php-cs-fixer"
        },
        "breadcrumbs.enabled": false,
        "workbench.tree.indent": 12,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        }
    }
  }
